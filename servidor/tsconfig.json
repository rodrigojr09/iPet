{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
